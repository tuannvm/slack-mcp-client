# Slack Configuration
SLACK_BOT_TOKEN="xoxb-your-bot-token"
SLACK_APP_TOKEN="xapp-your-app-level-token"

# MCP Configuration
MCP_SERVER_LISTEN_ADDRESS=":8080" # Address for this bot's MCP server endpoint
MCP_TARGET_SERVER_ADDRESS="http://localhost:8080" # Address of the MCP server to call (can be the same as listen address)
MCP_MODE="sse" # Communication mode: stdio, sse, http

# LLM Configuration (Example for OpenAI)
# OPENAI_API_KEY="sk-your-openai-key"

# Security Configuration
SECURITY_ENABLED="false"
SECURITY_STRICT_MODE="false"
SECURITY_ALLOWED_USERS=""
SECURITY_ALLOWED_CHANNELS=""
SECURITY_ADMIN_USERS=""
SECURITY_REJECTION_MESSAGE="I'm sorry, but I don't have permission to respond in this context. Please contact app administrator if you believe this is an error."
SECURITY_LOG_UNAUTHORIZED="true"

# Other Configuration
LOG_LEVEL="info"
